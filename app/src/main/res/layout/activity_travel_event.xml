<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.toremate.tourmate.TravelEvent">

    <TextView
        android:id="@+id/tvTravelEvent"
        android:layout_width="174dp"
        android:layout_height="35dp"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="37dp"
        android:text="Travel Event"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="42dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.393" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout6"
        android:layout_width="334dp"
        android:layout_height="59dp"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTravelEvent">

        <EditText
            android:id="@+id/etTravelDestination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Travel Destination" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="334dp"
        android:layout_height="52dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="13dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout6"
        android:layout_marginStart="16dp"
        android:id="@+id/textInputLayout7">

        <EditText
            android:id="@+id/etEstimatedBudget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Estimated Budget" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="332dp"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout8"
        android:id="@+id/textInputLayout9">

        <EditText
            android:id="@+id/etToDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="To Date" />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout8"
        android:layout_width="332dp"
        android:layout_height="55dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout7">

        <EditText
            android:id="@+id/etFromData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="From Date" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btnCreateRecord"
        android:layout_width="140dp"
        android:layout_height="48dp"
        android:layout_marginRight="44dp"
        android:layout_marginTop="17dp"
        android:background="@android:color/holo_blue_light"
        android:text="Create Event"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="16sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout9"
        tools:layout_editor_absoluteX="200dp" />

    <TextView
        android:id="@+id/tvError"
        android:layout_width="310dp"
        android:layout_height="42dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="17dp"
        android:textColor="@android:color/holo_blue_light"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCreateRecord" />
</android.support.constraint.ConstraintLayout>
